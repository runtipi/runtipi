{
  "name": "runtipi",
  "version": "4.1.0",
  "description": "",
  "packageManager": "pnpm@10.8.0",
  "scripts": {
    "dev": "turbo run dev",
    "build:packages": "turbo run build --filter='./packages/*'",
    "bundle": "turbo bundle",
    "build": "turbo run build",
    "test": "turbo test",
    "test:integration": "turbo run test:integration",
    "start": "node ./main.js",
    "start:dev": "docker compose --project-name runtipi -f docker-compose.dev.yml up --build",
    "start:prod": "docker compose --project-name runtipi -f docker-compose.prod.yml up --build",
    "test:e2e": "NODE_ENV=test dotenv -e .env -e .env.e2e -- playwright test",
    "test:e2e:ui": "NODE_ENV=test dotenv -e .env -e .env.e2e -- playwright test --ui",
    "gen:api-client": "openapi-ts",
    "lint:ci": "biome ci . --changed --error-on-warnings --no-errors-on-unmatched",
    "lint": "biome check",
    "version": "echo $npm_package_version"
  },
  "keywords": [],
  "author": "",
  "license": "GNU General Public License v3.0",
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@hey-api/openapi-ts": "^0.67.1",
    "@playwright/test": "^1.52.0",
    "@types/pg": "^8.15.0",
    "dotenv-cli": "^8.0.0",
    "turbo": "^2.5.2"
  },
  "dependencies": {
    "argon2": "^0.43.0",
    "drizzle-orm": "^0.43.1",
    "zod": "^3.24.4"
  },
  "pnpm": {
    "onlyBuiltDependencies": ["@biomejs/biome", "@nestjs/core", "@sentry/cli", "@swc/core", "argon2", "esbuild", "msw", "sharp"],
    "ignoredBuiltDependencies": ["@scarf/scarf", "sqlite3"]
  }
}
